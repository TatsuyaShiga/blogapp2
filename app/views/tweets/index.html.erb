<div class="contents row" >

  <!--個々のツイートを表示する-->
  <% @tweets.each do |tweet| %>

    <!--投稿内容の表示-->
    <!--ツイートの見せ方関連のMaterialize-->
      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
                <p><%= tweet.text %></p>
            </div>
            <div class="card-action">
              <!--オプション機能の表示-->
              <!--<div class="more">-->
              <!--  <ul class="more_list">-->
                 <!--全てのユーザーが見られる機能-->
                  <!--詳細ボタンの表示-->
                    <a href="#"><%= link_to '詳細', "/tweets/#{tweet.id}", method: :get %></a>
                <!--ユーザーが投稿したツイートのみを対象とする選別機能-->
                  <% if user_signed_in? && current_user.id == tweet.user_id %>
                  <!--編集ボタンの表示-->
                    <a href="#"><%= link_to '編集', "/tweets/#{tweet.id}/edit", method: :get %></a>
                  <!--削除ボタンの表示-->
                    <a href="#"><%= link_to '削除', "/tweets/#{tweet.id}", method: :delete %></a>
                  <% end %>
                  <!--</ul>-->
            <!--</div>-->
          </div>
        </div>
      </div>
    </div>

  <% end %>

</div>
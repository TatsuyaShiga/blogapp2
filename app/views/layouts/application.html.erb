<!DOCTYPE html>
<html>
  <head>
    <title>Blogapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <!--余裕があったらノーマライズドもやっとくこと-->
    <!--%= stylesheet_link_tag 'normalize', media: 'all', 'data-turbolinks-track': 'reload' %>-->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<!--Materializeのデザインフレームワーク-->
    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

<!--jQueryのCDN-->
<script
  src="https://code.jquery.com/jquery-3.4.0.js"
  integrity="sha256-DYZMCC8HTC+QDr5QNaIcfR7VSPtcISykd+6eSmBW5qo="
  crossorigin="anonymous"></script>
 
  </head>

  <body>

  <nav>
    <div class="nav-wrapper #00897b teal darken-1">
      <a href="/" class="brand-logo center">Blog</a>
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <% if user_signed_in? %>
          <li><%= link_to "LogOut", destroy_user_session_path, method: :delete, class: 'post'%></li>
          <li><a class="post" href="/tweets/new">New</a></li>
        <% else %>
          <li><%= link_to "LogIn", new_user_session_path, class: 'post' %></li>
          <li><%= link_to "SignIn", new_user_registration_path, class: 'post' %></li>
        <% end %>
      </ul>
    </div>
  </nav>

<!--サイトの各ページごとの中身の部分-->
    <%= yield %>

    
  </body>
</html>